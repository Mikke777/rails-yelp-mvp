<div style="background-color: white;" class="container rounded">
<h1> Restaurant <%= @restaurant.name %> </h1>

<h2>Informations</h2>

<p>Address: <%= @restaurant.address %></p>
<p>Phone Number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>

<%= link_to "Create a new review", new_restaurant_review_path(@restaurant) %>

<h2>Reviews</h2>
<div class="list-group  border border-dark">
<% @reviews.each do |review| %>
  <h5 class="list-group-item list-group-item-action flex-column align-items-start active">
  Rating:
  <% review.rating.times do %>
    <i class="fa-solid fa-star" style="color: #FFD43B;"></i>
  <% end %>
  </h5>
  <div class="d-flex w-100 justify-content-between mb-3 border-bottom">
    <p class="mb-1">Content: <%= review.content %></p>
  </div>
<% end %>
</div>


<%= link_to "Back to Restaurants", restaurants_path %>

</div>
